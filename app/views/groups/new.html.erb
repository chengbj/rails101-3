<div class="col-md-offset-4">
  <h2>CREATE A NEW TOPIC BOARD</h2>

  <hr>
  <%= form_for @group do |f| %>
  <% if @group.errors.any? %>
  <ul>
    <% @groups.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  TITLE
  <%= f.text_field :title %>
  <br>
  DESCRIPTION
  <br>
  <%= f.text_area :description %>
  <br>
  <%= f.submit "Submit", :desable_with => 'Submiting...'%>
  <% end %>
</div>
